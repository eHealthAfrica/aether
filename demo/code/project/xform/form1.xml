<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>microcensus_survey</h:title>
    <model>
      <instance>
        <None id="microcensus_survey">
          <sections/>
          <location/>
          <hoh>
            <hoh_firstname/>
            <hoh_lastname/>
            <hoh_age/>
          </hoh>
          <family_repeat jr:template="">
            <family_member>
              <family_age/>
            </family_member>
          </family_repeat>
          <meta>
            <instanceID/>
          </meta>
        </None>
      </instance>
      <bind nodeset="/None/sections" required="true()" type="select1"/>
      <bind nodeset="/None/location" required="true()" type="geopoint"/>
      <bind nodeset="/None/hoh/hoh_firstname" required="true()" type="string"/>
      <bind nodeset="/None/hoh/hoh_lastname" required="true()" type="string"/>
      <bind nodeset="/None/hoh/hoh_age" required="true()" type="int"/>
      <bind nodeset="/None/family_repeat/family_member/family_age" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/None/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/None/sections">
      <label>In which section is the Household located?</label>
      <item>
        <label>Section 1</label>
        <value>1</value>
      </item>
      <item>
        <label>Section 2</label>
        <value>2</value>
      </item>
      <item>
        <label>Section 3</label>
        <value>3</value>
      </item>
      <item>
        <label>Section 4</label>
        <value>4</value>
      </item>
    </select1>
    <input ref="/None/location">
      <label>Collect GPS coordinates of the house.</label>
    </input>
    <group ref="/None/hoh">
      <label>Head of Household</label>
      <input ref="/None/hoh/hoh_firstname">
        <label>What's the first name of the Head of Household?</label>
      </input>
      <input ref="/None/hoh/hoh_lastname">
        <label>What's the last name of the Head of Household?</label>
      </input>
      <input ref="/None/hoh/hoh_age">
        <label>How old is the Head of Household?</label>
      </input>
    </group>
    <group ref="/None/family_repeat">
      <label></label>
      <repeat nodeset="/None/family_repeat">
        <group ref="/None/family_repeat/family_member">
          <label>Family Member</label>
          <input ref="/None/family_repeat/family_member/family_age">
            <label>How old is the family member?</label>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>

